trigger Calculator on Calculater__c (before Insert, before update) {
    for(Calculater__c s : trigger.new)
    {
        if(trigger.isInsert || trigger.isUpdate)
        {
            if(s.operator__c=='/')
            {
                s.Result__c= s.Value_1__c / s.Value_2__c;        
            }
            else if(s.operator__c=='*')
            {
                s.Result__c= s.Value_1__c * s.Value_2__c;        
            } 
            else if(s.operator__c=='-')
            {
                s.Result__c= s.Value_1__c - s.Value_2__c;        
            } 
            else if(s.operator__c=='+')
            {
                s.Result__c= s.Value_1__c + s.Value_2__c;        
            }         
            
        }
    }
    
}
